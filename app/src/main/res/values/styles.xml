<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="colorError">@color/colorError</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Moments.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Moments.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Moments.Large</item>
        <!--<item name="colorSurface">color on cards, bottomsheet..</item>-->
        <!--<item name="colorOnSurface">text color on cards, bottomsheet..</item>-->
        <!--<item name="android:colorBackground">color of window background</item>-->
        <!--<item name="colorOnBackground">text color of window background</item>-->
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.Text.ExtraSmall" parent="TextAppearance.Compat.Notification.Time">
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>
    <style name="AppTheme.Text.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>
    <style name="AppTheme.Text.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>
    <style name="AppTheme.Text.Body2" parent="TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>
    <style name="AppTheme.Text.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>
    <style name="AppTheme.Text.Large" parent="TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="AppTheme.Text.Light.ExtraSmall" parent="TextAppearance.Compat.Notification.Time">
        <item name="android:fontFamily">@font/open_sans_light</item>
    </style>
    <style name="AppTheme.Text.Light.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/open_sans_light</item>
    </style>
    <style name="AppTheme.Text.Light.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/open_sans_light</item>
    </style>
    <style name="AppTheme.Text.Light.Body2" parent="TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">@font/open_sans_light</item>
    </style>
    <style name="AppTheme.Text.Light.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/open_sans_light</item>
    </style>
    <style name="AppTheme.Text.Light.Large" parent="TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">@font/open_sans_light</item>
    </style>

    <style name="AppTheme.Text.SemiBold.ExtraSmall" parent="TextAppearance.Compat.Notification.Time">
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
    </style>
    <style name="AppTheme.Text.SemiBold.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
    </style>
    <style name="AppTheme.Text.SemiBold.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
    </style>
    <style name="AppTheme.Text.SemiBold.Body2" parent="TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
    </style>
    <style name="AppTheme.Text.SemiBold.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
    </style>
    <style name="AppTheme.Text.SemiBold.Large" parent="TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
    </style>

    <style name="ShapeAppearance"/>
    <style name="ShapeAppearance.Moments"/>

    <!--Buttons, text fields, FABs, chips, date picker items-->
    <style name="ShapeAppearance.Moments.Small" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>
    <!--Cards, dialog, date picker container-->
    <style name="ShapeAppearance.Moments.Medium" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">16dp</item>
    </style>
    <!--BottomSheets-->
    <style name="ShapeAppearance.Moments.Large" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">24dp</item>
    </style>


    <!--context theme wrapper example-->
    <style name="Theme.Demo" parent="AppTheme">
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Demo.Dialog</item>
    </style>

    <style name="ThemeOverlay.Demo.Dialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/secondaryColor</item>
    </style>


</resources>
